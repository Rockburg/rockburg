<div class="start">
  <h1>Hire <b><u><%= skill.name %></u></b> for <b><u><%= band.name %></u></b></h1>
  <h2>Every member has a unique skillsets and traits that all affect how your band functions.</h2>
  <div class="members">
    <div class="member_list">
    <% members.each do |member| %>
    <div class="member">

      <div class="card-img-pad">
        <%= image_tag member.avatar_url, class: 'card-img-top' %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= member.name %></h5>
        <h4 class="text-success"><%= as_game_currency(member.cost_generator) %><small>/day</small></h4>
        <%= render partial: "progress", locals: {skill_name: "Instrument", skill_level: member.skill_primary_level} %>
        <%= render partial: "progress", locals: {skill_name: "Creativity", skill_level: member.trait_creativity} %>
        <%= render partial: "progress", locals: {skill_name: "Looks", skill_level: member.trait_looks} %>
        <%= render partial: "progress", locals: {skill_name: "Ego", skill_level: member.trait_ego, negative: true} %>

      </div>
      <div class="card-footer text-center">
        <%= link_to "Hire: <b>#{as_game_currency(member.cost_generator)}<small>/day</small></b>".html_safe, hire_band_skill_member_path(band_id: band.id, skill_id: skill.id, id: member.id), class: 'btn btn-primary' %>
      </div>

      
    </div>
    <% end %>
    </div>
  </div>
</div>