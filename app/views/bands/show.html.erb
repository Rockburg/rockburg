<% if @band.genre.total_members <= @band.members.count %>
<section class="profile-header band-profile">
  <div class="info">
    <div class="band-avatar">
      <ul class="band-members" data-member-count="<%= @band.members.count %>">
        <% @band.members.each do |member| %>
        <li><%= image_tag member.avatar_url %></li>
        <% end %>
      </ul>
    </div>
    <div class="about">
      <h1><%= @band.name %></h1>
      <h2><%= @band.genre.name %>: <%= @band.genre.style %></h2>
      <h3><u class="data-fans"><%= @band.fans %></u> fans, <u class="data-buzz"><%= @band.buzz %></u> buzz</h3>
    </div>
  </div>
</section>
<% if @activity %>
  <section class="current_activity">
    <p>Currently: <%= @activity.humanize_action %> for <b data-endtimes="<%= @activity.ends_at %>"></b></p>
  </section>
<% end %>
<% if @band.overly_fatigued_members? %>
<section class="fatigued">
  <p>Your band is too fatigued to do anything but rest!</p>
</section>
<% end %>
<section class="actions">
  <div class="action_items">
    <a href="#" class="active<% if @band.overly_fatigued_members? %> disabled<% end %>" data-choice="practice"><b>Practice</b><span>Improves the skill level of each member</span></a>
    <a href="#" class="active<% if @band.overly_fatigued_members? %> disabled<% end %>" data-choice="gig"><b>Gig</b> <span>Gain fans and make money</span></a>
    <a href="#" class="active<% if @band.overly_fatigued_members? %> disabled<% end %>" data-choice="write_song"><b>Write</b> <span>Needed to record and grow fans</span></a>
    <a href="#" class="active<% if @band.overly_fatigued_members? %> disabled<% end %>" data-choice="record"><b>Record</b> <span>Gets a song ready to release</span></a
    >
    <a href="#" class="active<% if @band.overly_fatigued_members? %> disabled<% end %>"><b>Promote</b><span>Create videos, do interviews, press & more!</span></a>
    <a href="#" class="active" data-choice="rest">
      <b>Rest</b>
      <span>Too fatigued? Rest, or bad things will happen</span>
    </a>
  </div>
  <div class="choices">
    <div class="choice" data-choice="practice">
      <h4>How long would you like to practice?</h4>
      <h5>
        The longer you practice the more skill points you may receive
      </h5>
      <ul>
        <li>
          <%= link_to "5 minutes", new_band_activity_path(band_id: @band.id, type: 'practice', hours: '5') %>
        </li>
        <li><%= link_to "15 minutes", new_band_activity_path(band_id: @band.id, type: 'practice', hours: '15') %></li>
        <li><%= link_to "30 minutes", new_band_activity_path(band_id: @band.id, type: 'practice', hours: '30') %></li>
        <li><%= link_to "1 hour", new_band_activity_path(band_id: @band.id, type: 'practice', hours: '60') %></li>
      </ul>
    </div>
    <div class="choice" data-choice="rest">
      <h4>How long would you like to rest?</h4>
      <h5>
        Resting reduces fatigue and prevents mistakes.
      </h5>
      <ul>
        <li><%= link_to "5 minutes", new_band_activity_path(band_id: @band.id, type: 'rest', hours: '5') %></li>
        <li><%= link_to "15 minutes", new_band_activity_path(band_id: @band.id, type: 'rest', hours: '15') %></li>
        <li><%= link_to "30 minutes", new_band_activity_path(band_id: @band.id, type: 'rest', hours: '30') %></li>
        <li><%= link_to "1 hour", new_band_activity_path(band_id: @band.id, type: 'rest', hours: '60') %></li>
      </ul>
    </div>
    <div class="choice" data-choice="gig">
      <h4>What venue would you like to play?</h4>
      <h5>
        Choose a venue carefully! A high-cap venue you can't fill will hurt the perception (and future fans) of your band.
      </h5>
      <ul>
        <% Venue.order('capacity ASC').each do |venue| %>
        <li>
          <%= link_to "#{venue.name} - #{venue.capacity} cap", new_band_activity_path(band_id: @band.id, type: 'gig', venue: venue.id) %>
        </li>
        <% end %>
      </ul>
    </div>
    <div class="choice" data-choice="write_song">
      <h4>How long would you like to spend writing your song?</h4>
      <h5>The longer you spend on your song, the higher quality it will be.</h5>
      <ul>
        <li><%= link_to "5 minutes", new_band_activity_path(band_id: @band.id, type: 'write_song', hours: '5') %></li>
        <li><%= link_to "15 minutes", new_band_activity_path(band_id: @band.id, type: 'write_song', hours: '15') %></li>
        <li><%= link_to "30 minutes", new_band_activity_path(band_id: @band.id, type: 'write_song', hours: '30') %></li>
        <li><%= link_to "1 hour", new_band_activity_path(band_id: @band.id, type: 'write_song', hours: '60') %></li>
      </ul>
    </div>
    <div class="choice" data-choice="record">
      <h4>What would you like to record & release?</h4>
      <h5>The song quality and studio budget have substantial impact on the final recording.</h5>
      <%= form_tag("/bands/#{@band.id}/activities/new", method: "get") do %>
      <%= hidden_field_tag 'type', 'record_single' %>
      <div class="form-group">
        <h6>Select a song to record</h6>
        <%= select_tag :song_id, options_from_collection_for_select(@band.songs, :id, :full_song), class: 'form-control' %>
      </div>
      <div class="form-group">
        <h6>Select a studio to record at</h6>
        <%= collection_select(:studio, :studio_id, Studio.all, :id, :full_studio, class: 'form-control') %>
      </div>
      <p>Once you're done recording, the song will be released and star generating money...if anyone listens to it!</p>
      <%= submit_tag("Start Recording & Releasing", class: 'button') %>
      <% end %>
    </div>
  </div>
</section>
