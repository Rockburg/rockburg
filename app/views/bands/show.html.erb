<section class="member_management">
  <h5>Members</h5>
  <div class="member_list">
    <% @band.genre.skills.each do |genre_skill| %>
    <% member = @band.members.with_skill(genre_skill).first %>
    <div class="member">
      <div class="avatar">
        <%= image_tag member.avatar_url %>
      </div>
      
      <div class="details">
        <h4><%= member.name %></h4>
        <h5><%= as_game_currency(member.cost_generator) %><small>/day</small></h5>
        <ul class="skill_list">
          <%= render partial: "skills/progress", locals: {skill_name: "Instrument", skill_level: member.skill_primary_level} %>
          <%= render partial: "skills/progress", locals: {skill_name: "Creativity", skill_level: member.trait_creativity} %>
          <%= render partial: "skills/progress", locals: {skill_name: "Looks", skill_level: member.trait_looks} %>
          <%= render partial: "skills/progress", locals: {skill_name: "Ego", skill_level: member.trait_ego, negative: true} %>
          <%= render partial: "skills/progress", locals: {skill_name: "Fatigue", skill_level: member.trait_fatigue, negative: true} %>
        </ul>
        <div class="hire_footer">
          <%= link_to("Fire this member", member_path(member_id: member, band_id: @band), method: :delete, data: { confirm: "Are you sure you want to fire #{member.name}?" }, class: 'button button-small button-danger') if manager_signed_in? and @band.manager == current_manager %>
        </div>
      </div>      
    </div>
    <% end %>
  </div>
</section>
<% else %>
<div class="start">
  <h1><%=@band.name%> is very <%= @band.genre.style %> <%= @band.genre.name %> of you!</h1>
  <h2>Time to add the founding members!</h2>
  <div class="members">
    <div class="member_list">
      <%= render template: "bands/allmembers"  %>
    </div>
  </div>
</div>
<% end %>